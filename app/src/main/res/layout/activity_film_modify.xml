<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Mvp.Activity.FilmAddActivity"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/main_theme"
        android:layout_width="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="影片信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/add_icon"
                    android:layout_margin="5dp"
                    android:layout_width="200dp"
                    android:layout_height="320dp"/>
                <LinearLayout
                    android:id="@+id/tostar_layout"
                    android:layout_toRightOf="@id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:text="主演:"
                        android:shadowColor="#0ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/tostar"
                        android:hint="主演"
                        android:theme="@style/MyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/type_layout"
                    android:layout_toRightOf="@id/image"
                    android:layout_below="@id/tostar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:text="电影类型:"
                        android:shadowColor="#0ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/type"
                        android:hint="电影类型"
                        android:theme="@style/MyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/hourlong_layout"
                    android:layout_toRightOf="@id/image"
                    android:layout_below="@id/type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:text="电影时长:"
                        android:shadowColor="#0ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/hourlong"
                        android:hint="电影时长"
                        android:inputType="phone"
                        android:theme="@style/MyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/release_layout"
                    android:layout_toRightOf="@id/image"
                    android:layout_below="@id/hourlong_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:text="上映时间:"
                        android:shadowColor="#0ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/release"
                        android:hint="上映时间"
                        android:theme="@style/MyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/price_layout"
                    android:layout_below="@id/release_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:text="电影价格:"
                        android:shadowColor="#0ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/price"
                        android:hint="电影价格"
                        android:theme="@style/MyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_below="@id/price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:text="影片名字:"
                        android:shadowColor="#0ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/name"
                        android:hint="影片名字"
                        android:theme="@style/MyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fadeScrollbars="false"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                >
                <TextView

                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
                <Button

                    android:id="@+id/btn"
                    android:layout_weight="2"
                    android:text="修改成功"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:background="@drawable/bt_shape_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button

                    android:id="@+id/add_play"
                    android:layout_weight="2"
                    android:layout_margin="10dp"
                    android:text="增加演出计划"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:background="@drawable/bt_shape_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>